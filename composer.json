{
    "name": "ddd-module/snapshotting",
    "description": "POC for snapshotting aggregates in broadway/broadway",
    "type": "library",
    "license": "proprietary",
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "doctrine/dbal": "^2.9 | ^3.3 | ^4.2",
        "ddd-module/broadway": "^1.0",
        "ddd-module/value-object": "^1.0",
        "ddd-module/base": "^1.0"
    },
    "require-dev": {
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "mockery/mockery": "^1.4",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12.96",
        "phpstan/phpstan-mockery": "^0.12.14",
        "phpstan/phpstan-phpunit": "^0.12.22",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-master",
        "symplify/easy-coding-standard": "^9.4",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
      "psr-4": {
        "DddModule\\Snapshotting\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "DddModule\\Snapshotting\\Tests\\Unit\\": "tests/unit"
      }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
